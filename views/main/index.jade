extends ../../layouts/layout

block content
	ul.breadcrumb
		li.active Principal
			span.divider /
	// Carousel section display
	section#carruselSection
		.container-fluid-withoutmargin.hidden-phone
			#fichas_muestra(data-bind="template: { foreach: fichasCarrusel, afterRender: showFichaElement, visible: fichasCarrusel().length > 0}")
				.foto_muestra(data-bind="css: { 'hidden-tablet': numeroFichaCarrusel > 5 }")
					a.thumbnail(data-toggle="popover", data-placement="bottom", data-bind="attr: { title: taxonnombre, 'data-content': textoNombresComunes, href: recordURL }", data-trigger="hover")
						img(data-bind="attr: { src: imagenThumb140().urlImagen140 }")
					span.carousel-taxonnombre(data-bind="text: taxonnombre")
	// Wall records
	// Messages section
	section#messageAndAlertSection
		#messageAndAlert
	section#catalogWallSection
		#wall-container-wrapper
			#container
		.navigation
			a(data-bind="attr: { href: urlSearch() }")