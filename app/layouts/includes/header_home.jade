block header
	header(data-ng-controller="SearchOptionsCtrl")
		nav.navbar(role="navigation")
			.navbar-header
				button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar-header-catalog-collapse")
					span.sr-only Toggle navigation
					span.icon-bar"
					span.icon-bar"
					span.icon-bar"
				a(class="brand", title="Catálogo de la Biodiversidad", href="/")
					img.img-responsive(src="images/logo_catalogo_especies.png")
			.collapse.navbar-collapse(id="navbar-header-catalog-collapse")
				.container-center
					ul.nav.navbar-nav
						li.dropdown
							a(class="dropdown-toggle", data-toggle="dropdown") GRUPO BIOLÓGICO
								b.caret
							ul.dropdown-menu
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'all'}")
									a(data-ng-click="switchTaxon('all')", data-ng-href="/#/{{searchOptions.getCurrentURLWithoutTaxon()}}") Todos
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'insecta'}")
									a(data-ng-click="switchTaxon('insecta')", data-ng-href="/#/insectos{{searchOptions.getCurrentURLWithoutTaxon()}}") Insectos
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'aves'}")
									a(data-ng-click="switchTaxon('aves')", data-ng-href="/#/aves{{searchOptions.getCurrentURLWithoutTaxon()}}") Aves
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'plantae'}")
									a(data-ng-click="switchTaxon('plantae')", data-ng-href="/#/plantas{{searchOptions.getCurrentURLWithoutTaxon()}}") Plantas
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'mammal'}")
									a(data-ng-click="switchTaxon('mammal')", data-ng-href="/#/mamiferos{{searchOptions.getCurrentURLWithoutTaxon()}}") Mamíferos
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'reptilia'}")
									a(data-ng-click="switchTaxon('reptilia')", data-ng-href="/#/reptiles{{searchOptions.getCurrentURLWithoutTaxon()}}") Reptiles
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'amphibia'}")
									a(data-ng-click="switchTaxon('amphibia')", data-ng-href="/#/anfibios{{searchOptions.getCurrentURLWithoutTaxon()}}") Anfibios
								li(data-ng-class="{active: searchOptions.getCurrentTaxon() == 'fungi'}")
									a(data-ng-click="switchTaxon('fungi')", data-ng-href="/#/hongos{{searchOptions.getCurrentURLWithoutTaxon()}}") Hongos
								li.divider
								li(data-ng-class="{active: searchOptions.getShowRecordsWithPicture()}")
									a(data-ng-click="switchShowRecordsWithPicture()", data-ng-href="/#{{searchOptions.getCurrentURL()}}") Mostrar primero fichas con foto
						li.divider-vertical.hidden-xs
							li.dropdown
								a(class="dropdown-toggle", data-toggle="dropdown") ORDENAR
									b.caret
								ul.dropdown-menu
									li(data-ng-class="{active: searchOptions.getOrderBy() == 'scientificName'}")
										a(href="") Nombre científico
									li.divider
									li(data-ng-class="{active: searchOptions.getOrderDirection() == 'asc'}")
										a(data-ng-click="switchOrderDirection('asc')", data-ng-href="/#{{searchOptions.getCurrentURL()}}") Ascendente
									li(data-ng-class="{active: searchOptions.getOrderDirection() == 'desc'}")
										a(data-ng-click="switchOrderDirection('desc')", data-ng-href="/#{{searchOptions.getCurrentURL()}}") Descendente
						.navbar-form.navbar-left
							form(data-ng-submit="go()")
								.form-group
									input.form-control(type="text", data-ng-model="currentTextSearch", placeholder="Buscar especies")
								button.visible-large-screen(type="button", data-ng-click="go()")
				ul.nav.navbar-nav.navbar-right
					li
						a(class="", title="Ir al portal del SiB Colombia", href="http://www.sibcolombia.net", target="_blank")
							img.img-responsive(src="images/ico_portal.png")
					li.hidden-xs.hidden-sm
						span
					li.hidden-sm
						a(href="https://twitter.com/sibcolombia", target="_blank", title="Síguenos en Twitter")
							img.img-responsive(src="images/ico_twitter.png")
					li.hidden-sm
						a(href="https://www.facebook.com/SibColombia", target="_blank", title="Síguenos en facebook")
							img.img-responsive(src="images/ico_fb.png")
					li.hidden-sm
						a(href="http://www.youtube.com/user/sibcolombia", target="_blank", title="Visita nuestro canal en youtube")
							img.img-responsive(src="images/ico_youtube.png")
		nav(role="alertmessage")
			//.alertbar
				h4 Disculpe las molestias estamos en renovacion
				span Algunas de las funciones podrian no funcionar, lo invitamos a darnos sus sugerencias y visitarnos nuevamente muy pronto.
			.notFound.occult-element
				.row
					.col-xs-12
						.content
							.title LO SENTIMOS
							.body No localizamos fichas de especie con la condición de búsqueda elegida.
						img.img-responsive(src="images/sad_dog.png")