#wall-container-wrapper
	div(infinite-scroll='catalogue.nextPage()', infinite-scroll-disabled='catalogue.busy', infinite-scroll-distance='2')
		div(id="isotopeContainer", isotope-container)
			div(ng-repeat="specie in catalogue.species", isotope-item, class="element ficha")
				a(ng-href='/ficha/id/{{specie.id}}')
					img(ng-src='{{ specie.currentImage }}')
				.ficha-muro-datos
					.ficha-muro-taxonnombre
						a(ng-href='/ficha/id/{{specie.id}}')
							span {{specie.taxon_nombre.trim()}}
					.ficha-muro-autor
						span {{specie.autor.trim()}}
					.ficha-muro-nombrescomunes(ng-if="specie.nombres_comunes.length > 0")
						strong Nombres comunes: 
						span(ng-repeat="nombre_comun in specie.nombres_comunes") {{nombre_comun.nombre.trim()}}
							span(ng-if="!$last") , 
							span(ng-if="$last") . 
					.ficha-muro-departamentos(ng-if="specie.departamentos.length > 0")
						strong Departamentos: 
						span(ng-repeat="departamento in specie.departamentos") {{departamento.departamento.trim()}}
							span(ng-if="!$last") , 
							span(ng-if="$last") . 
		div(ng-show='catalogue.busy') Loading data...
//div(infinite-scroll='reddit.nextPage()', infinite-scroll-disabled='reddit.busy', infinite-scroll-distance='1')
	div(ng-repeat='item in reddit.items')
		span {{item.score}}
		span
			a(ng-href='{{item.url}}', target='_blank') {{item.title}}
		small by
			| {{item.author}} -
			a(ng-href='http://reddit.com{{item.permalink}}', target='_blank') {{item.num_comments}} comments
		div(style='clear: both;')
	div(ng-show='catalogue.busy') Loading data...